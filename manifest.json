{
    "manifest_version": 2,
    "name": "NiconicoDic Chrome Editable",
    "version": "1.0",

    "description": "Chromeでニコニコ大百科が編集できない問題に暫定的に対応するChrome拡張です。",
    
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "https://dic.nicovideo.jp/p/*"
    ]
}